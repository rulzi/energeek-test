{% extends 'layout/app.twig' %}

{% block body %}


<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            {% if( flash.message('success') ) %}
                <div class="alert alert-success" role="alert">
                    {{ flash.message('success')[0] }}
                </div>
            {% endif %}

            {% if( csrf_error ) %}
                <div class="alert alert-danger" role="alert">
                    Failed CSRF check!
                </div>
            {% endif %}

            {% if( errors ) %}
                <div class="alert alert-danger" role="alert">
                    Missing Field Required
                </div>
            {% endif %}

            <div class="panel panel-default">
                <div class="panel-heading">Add Transaction</div>
                <div class="panel-body">
                    <form class="form-horizontal" role="form" method="POST" action="{{ path_for('transactionSave', {'customer_id' : customer_id }) }}" enctype="multipart/form-data">
                        <input type="hidden" name="{{ nameKey }}" value="{{ name }}">
                        <input type="hidden" name="{{ valueKey }}" value="{{ value }}">

                        <div class="form-group{{ errors.tanggal_lahir ? ' has-error' : '' }}">
                            <label class="col-md-2 control-label">Tanggal Transaksi</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" name="tanggal_transaksi" value="{{ old.tanggal_transaksi }}">
                                {% if errors.tanggal_transaksi %}
                                    <span class="help-block">
                                        <strong>{{ errors.tanggal_transaksi[0] }}</strong>
                                    </span>
                                {% endif %}
                            </div>
                        </div>

                        <div class="form-group{{ errors.type ? ' has-error' : '' }}">
                            <label class="col-md-2 control-label">Type</label>
                            <div class="col-md-10">
                                <select name="type" class="form-control">
                                    <option value="1">Kredit</option>
                                    <option value="0">Debet</option>
                                </select>
                                {% if errors.type %}
                                    <span class="help-block">
                                        <strong>{{ errors.type[0] }}</strong>
                                    </span>
                                {% endif %}
                            </div>
                        </div>

                        <div class="form-group{{ errors.nominal ? ' has-error' : '' }}">
                            <label class="col-md-2 control-label">Nominal</label>
                            <div class="col-md-10">
                                <input type="number" class="form-control" name="nominal[]" value="{{ old.nominal ? old.nominal : '0' }}" min='0'>
                                {% if errors.nominal %}
                                    <span class="help-block">
                                        <strong>{{ errors.nominal[0] }}</strong>
                                    </span>
                                {% endif %}
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-6 col-md-offset-6">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-btn fa-user"></i>Save
                                </button>
                                <a href="{{ path_for('transactions', {'customer_id' : customer_id }) }}" class="btn btn-warning">
                                    <i class="fa fa-btn fa-user"></i>Kembali
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



{% endblock %}
